<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/display_result"
        android:text="Calculator"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="40dp"/>
    <EditText
       android:id="@+id/edit_first"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Calculator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/display_result"
        android:layout_width="50dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/edit_second"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_first"
        android:layout_width="50dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editsecond"
        android:layout_marginStart="20dp"
        android:layout_marginTop="59dp"
        android:text="add"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_second"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="154dp"
        android:layout_toRightOf="@id/add"
        android:text="Subtract"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_second"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="63dp"
        android:layout_toRightOf="@id/Subtract"
        android:text="multiply"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_second"
        android:layout_marginStart="-197dp"
        android:layout_marginLeft="-197dp"
        android:layout_marginTop="233dp"
        android:layout_toEndOf="@+id/multiply"
        android:layout_toRightOf="@id/multiply"
        android:text="Divide"
        android:textAllCaps="false" />


</RelativeLayout>


